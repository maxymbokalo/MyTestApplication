<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="progernapplications.mytestapplication.RegistrationFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/loginField"
            android:textSize="15sp"
            android:hint="Login"
            android:drawableLeft="@drawable/login_icon"
            android:drawablePadding="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/sendData"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/passwordField"
            android:textSize="15sp"
            android:hint="Password"
            android:drawableLeft="@drawable/password_icon"
            android:drawablePadding="5dp"
            android:layout_below="@+id/loginField"
            android:layout_alignEnd="@+id/sendData"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/firstNameField"
            android:textSize="15sp"
            android:hint="First name"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/getData"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/secondNameField"
            android:textSize="15sp"
            android:hint="Second name"
            android:layout_below="@+id/firstNameField"
            android:layout_alignStart="@+id/firstNameField"
            android:layout_marginRight="10dp" />

        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/emailField"
            android:hint="Email"
            android:textSize="15sp"
            android:drawableLeft="@drawable/email_icon"
            android:drawablePadding="5dp"
            android:layout_below="@+id/passwordField"
            android:layout_alignEnd="@+id/sendData"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dateOfBirthField"
            android:textSize="15sp"
            android:hint="Date of birth"
            android:textAlignment="center"
            android:drawableLeft="@drawable/birthday_icon"
            android:drawablePadding="5dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/secondNameField"
            android:layout_alignStart="@+id/secondNameField" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND"
            android:id="@+id/sendData"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_buttons"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GET"
            android:id="@+id/getData"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_buttons"/>

    </RelativeLayout>
</FrameLayout>
