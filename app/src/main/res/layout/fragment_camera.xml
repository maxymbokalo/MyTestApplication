<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="progernapplications.mytestapplication.CameraFragment">

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/floatActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/camera_icon_fab"
        fab:fab_colorNormal="@color/primary"
        fab:fab_colorPressed="@color/primary_light"
        fab:fab_colorRipple="@color/primary_dark"
        android:longClickable="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagePlaceholder"
        android:layout_gravity="center"
        android:layout_margin="20dp" />

</FrameLayout>
